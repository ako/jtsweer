#:import C kivy.utils.get_color_from_hex 
#:set my_color (.4, .3, .4)
#:set my_color_hl (.5, .4, .5)

<Chart@GridLayout>:
    cols: 2
    pngFile: "bar_char.png"
    Image:
        id: image
        source: root.pngFile
        canvas.before: 
            Color: 
                rgb: C('#3498DB') 
            Rectangle: 
                pos: self.pos 
                size: self.size
    
<StatTile@GridLayout>:
    cols: 1
    tileValue: "value"
    tileName: "name"
    bckclr: C('#3498DB') 
    canvas.before: 
        Color: 
            rgb: C('#3498DB') 
        Rectangle: 
            pos: self.pos 
            size: self.size
    padding: 5 
    Label:
        id: lbl1
        text: root.tileValue
        font_size: "84sp"
        text_size: self.size
        valign: "top"
        halign: "left"
    Label:
        id: lbl2
        text: root.tileName
        font_size: "18sp"
        text_size: self.size
        valign: "top"
        halign: "left"

<StatWithDetailsTile@GridLayout>:
    padding: 5 
    cols: 1
    tileValue: "value"
    firstLabel: ""
    secondLabel: ""
    thirdLabel: ""
    chart: ""
    tileColor: '#16A085'
    state: 'normal'
    canvas.before: 
        Color: 
            rgb: C(self.tileColor)
        Rectangle: 
            pos: self.pos 
            size: self.size
    Label:
        id: lbl1
        text: root.tileValue
        font_size: "84sp"
        text_size: self.size
        valign: "top"
        halign: "left"
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1, .1
                id: lbl2
                text: root.firstLabel
                font_size: "18sp"
                text_size: self.size
                valign: "bottom"
                halign: "left"
            Label:
                size_hint: 1, .1
                id: lbl2
                text: root.secondLabel
                font_size: "18sp"
                text_size: self.size
                valign: "bottom"
                halign: "left"
            Label:
                size_hint: 1, .1
                id: lbl2
                text: root.thirdLabel
                font_size: "18sp"
                text_size: self.size
                valign: "bottom"
                halign: "left"
        Chart:
            size_hint: 1, .5
            pngFile: root.chart

<Button>:
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    background_color: C('#95A5A6')
    font_size: 24
                    
<CurrentWeather@Boxlayout>:
    orientation: 'vertical'
    spacing: 5
    GridLayout:
        cols: 3
        size_hint: 1, .1
        spacing: 5
        Button:
            text: root.myTime
            background_color: C('#3498DB')
        Button:
            text: "Quit"
            on_press: app.quitApp()
            background_color: C('#2ECC71')
        Button:
            text: "Refresh"
            background_color: C('#1ABC9C')
    GridLayout:
        cols: 3
        size_hint: 1, .9
        spacing: 5
        StatWithDetailsTile:
            id: tempTile
            tileValue: str(app.tempC)
            firstLabel: str(app.tempCLabel)
            secondLabel: "Voelt als " + str(app.tempFeel)
            thirdLabel: "Dauwpunt " + str(app.tempDew)
            chart: str(app.tempSparkChart)        
            tileColor: '#16A085'
        StatWithDetailsTile:
            id: windTile
            tileValue: str(app.windKnt)
            firstLabel: "Knopen"
            secondLabel: str(app.windKph) + " km/h"
            thirdLabel: "Vlagen max: " + str(app.windGustKnt)
            tileColor: '#1ABC9C'
        StatTile:
            id: windDirectionTile
            tileValue: str(app.windDegrees)
            tileName: "Windrichting"
        Chart:
            id: windChart
            pngFile: "bar_chart.png"

    